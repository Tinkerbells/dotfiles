#!/bin/bash

# Check if Bluetooth is available
check_bluetooth() {
    if ! command -v bluetoothctl &>/dev/null; then
        echo "Error: Bluetoothctl not found. Please make sure Bluetooth is installed and properly configured." >&2
        exit 1
    fi
}

# Check if dwmblocks is available
check_dwmblocks() {
    if ! command -v dwmblocks &>/dev/null; then
        echo "Error: Dwmblocks not found. Please make sure dwmblocks is installed." >&2
        exit 1
    fi
}

# Check if device is connected
device_connected() {
    local device_info
    device_info=$(bluetoothctl info "$1")
    if echo "$device_info" | grep -F -q "Connected: yes" && [ -n "$1" ]; then
        return 0
    else
        return 1
    fi
}

# Reload dwmblocks
reload_dwmblocks() {
    kill -39 "$(pidof dwmblocks)"
    kill -40 "$(pidof dwmblocks)"
}

# Toggle device connection
toggle_connection() {
    if device_connected "$1"; then
        bluetoothctl disconnect "$1"
    else
        bluetoothctl connect "$1"
    fi
    reload_dwmblocks
}

# Display menu and toggle connection
show_menu() {
    local devices menu_entries selection mac
    
    # Get devices and format them uniquely
    devices=$(bluetoothctl devices | awk '{print substr($2,1,2) " " $2 " " substr($0, index($0,$3))}')
    
    # Build menu entries with MAC prefix to distinguish identical names
    menu_entries=$(echo "$devices" | awk '{print $3 " (" $1 ")" " " $2}')
    
    # Show menu
    selection=$(echo "$menu_entries" | sort | dmenu -p "Devices:" -l 10)
    
    # Extract MAC address precisely
    mac=$(echo "$selection" | awk '{print $NF}')
    
    toggle_connection "$mac"
}

main() {
    check_bluetooth
    check_dwmblocks
    show_menu
}

main
