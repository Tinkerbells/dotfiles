# Running apps
super + w  
  flatpak run io.github.ungoogled_software.ungoogled_chromium

super + shift + w  
  chromium 

super + shift + t   
  flatpak run org.telegram.desktop

super + shift + f 
   nemo

# Running terminal based apps
super + Return 
  $TERMINAL 

super + f 
  $TERMINAL -t yazi -e yazi
# terminal binded to second tag
super + shift + Return  
  $TERMINAL -t terminal

super + shift + m 
  $TERMINAL -t ncmpcpp -e ncmpcpp

super + control + b 
  $TERMINAL -t btop -e btop 

super + o 
  $TERMINAL -t chatgpt -e chatgpt 

super + control + t 
  $TERMINAL -t transmission-tui -e transgression-tui 

# Dmenu stuff
super + d 
  dmenu_run 

super + c 
  clipmenu 

super + shift + b 
  dmenu-bluetooth

alt + t 
  dmenu-translate

alt + c 
  dmenu-calculator -c clipboard

super + shift + g  
  $TERMINAL -t add-book -e dmenu-bookmarks -a

super + g  
  dmenu-bookmarks -g

super + p 
  dmenu-pass

super + shift + o 
  dmenu-switch-audio > /dev/null

# super + shift + c 
#   dmenu-px-rem 

super + control + g
  gitget -d

super + shift + y 
  yt-mpv

# Dunst histroy 
# alt + h
#   dunstctl history-pop                              
  
# Media Control keys
XF86AudioLowerVolume
  change-volume down	

XF86AudioRaiseVolume
  change-volume up 

XF86AudioMute
  change-volume mute 

XF86Audio{Play,Pause}
  playerctl play-pause

XF86AudioNext
  mpc next

XF86AudioPrev
  mpc prev

super + control + n
  mpc next

super + control + p
  mpc prev

alt + Return
  mpc toggle

# Screenshots
super + s
  screenshot 

super + shift + s
  screenshot select  

super + control + s 
  screenshot window 

# Color picker
super + shift + e 
  farge --no-preview

# Toggle vpn 
super + shift + v 
  toggle-vpn

# Set background image
super + shift + l
  setbg

super + shift + p
  pavucontrol
